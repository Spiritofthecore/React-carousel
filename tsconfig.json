{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "allowJs": true,
        "target": "ES5",
        "jsx": "react",
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "typeRoots": [ "./typings" ],
        "types": ["node"],
        "module": "ES6",
        "skipLibCheck": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "webpack.config.js"
    ]
}